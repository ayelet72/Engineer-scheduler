<Window x:Class="PL.EngineerViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL" xmlns:system="http://schemas.microsoft.com/winfx/2009/xaml"
        mc:Ignorable="d"
        Title="EngineerViewWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}" >
    <Grid>
        <TextBox Text="{Binding CurrentTask ,Mode=OneWay}" IsReadOnly="False" />
        <Button Content="assignment task" Visibility="{Binding IsButtonVisibile}" Click="AssignTask_Click" Margin="282,357,282,0"/>
    </Grid>
</Window>
